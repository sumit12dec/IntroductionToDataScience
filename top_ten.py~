import sys
import json

def main():
	tweet_file = open(sys.argv[1])
	hash_score = {} # initialize an empty dictionary
	sorted_hash_score = {}
	for each in tweet_file:
		a = json.loads(each)
		if 'entities' in a:
			h = a['entities']
			b = h["hashtags"]
			for each_dict in b:
				hashtag = each_dict['text'].encode('ascii','ignore')
				if hashtag not in hash_score:
					hash_score[hashtag]=1
				else:
					hash_score[hashtag] = hash_score[hashtag] +1
	count = 0
	for w in  sorted(hash_score, key=hash_score.get, reverse=True):
		if count==10:
			break		
		print w,hash_score[w]
		count = count+1
if __name__ == '__main__':
    main()
